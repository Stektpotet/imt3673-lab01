<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.labs.halvorbs.lab01.ThirdActivity">

    <Button
        android:id="@+id/a3_btn_button"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="136dp"
        android:layout_marginStart="136dp"
        android:text="Submit Change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/a3_field_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="349dp"
        android:layout_marginEnd="73dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/EditFieldHint"
        android:inputType="textPersonName"
        android:text="@string/EditField"
        app:layout_constraintBottom_toTopOf="@+id/a3_btn_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
